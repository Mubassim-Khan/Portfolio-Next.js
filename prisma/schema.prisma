generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONNECTION_STRING")
}

model Project {
  id          String       @id @default(cuid())
  name        String
  url         String       @unique
  coverImage  String?
  description String?
  createdAt   DateTime     @default(now())
  logs        UptimeLog[]
  reports Report[]
}

model UptimeLog {
  id           String   @id @default(uuid())
  status       Boolean
  checkedAt    DateTime @default(now())
  responseTime Int?     // ms
  httpStatus   Int?
  errorMessage String?
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    String
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  contact       String?
  profilePhoto  String?  // URL to uploaded image
  github        String?
  instagram     String?
  portfolio     String?
  linkedin      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Upload {
  id        String   @id @default(cuid())
  userId    String
  filename  String
  url       String
  createdAt DateTime @default(now())
}

model Report {
  id        String   @id @default(cuid())
  name      String
  type      String   
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
}

model ApiKey {
  id        String   @id @default(cuid())
  variable  String   
  secret    String   
  createdAt DateTime @default(now())
}
